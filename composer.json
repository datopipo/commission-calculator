{
    "name": "herd/pipo",
    "description": "Commission Calculator for financial operations",
    "type": "project",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CommissionCalculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommissionCalculator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
